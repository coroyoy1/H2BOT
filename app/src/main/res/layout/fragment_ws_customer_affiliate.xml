                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:textAlignment="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="Full Name:"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                    <TextView
                                        android:textAlignment="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="Contact No.:"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                    <TextView
                                        android:textAlignment="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="Email Address:"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:textAlignment="center"
                                        android:id="@+id/orderNoaffAFF"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="sample edit"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                    <TextView
                                        android:textAlignment="center"
                                        android:id="@+id/contactNoaffAFF"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="sample edit"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                    <TextView
                                        android:textAlignment="center"
                                        android:id="@+id/emailaffAFF"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="sample edit"
                                        android:textColor="@android:color/white"
                                        android:textSize="18dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Address:"
                                android:textColor="@android:color/white"
                                android:textSize="18dp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_margin="8dp"
                                android:textAlignment="center"
                                android:id="@+id/addressaffAFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="sample edit"
                                android:textColor="@android:color/white"
                                android:textSize="18dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@android:color/holo_blue_dark"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@android:color/white"
                            android:background="@android:color/holo_green_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Points Receive From Affiliate"
                            android:textAlignment="center"
                            android:textSize="18dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_margin="8dp"
                                android:textAlignment="center"
                                android:id="@+id/pointsaffAFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="sample edit"
                                android:textColor="@android:color/white"
                                android:textSize="18dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
