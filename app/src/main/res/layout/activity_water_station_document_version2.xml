<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterStationDocumentVersion2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Update Station Requirments"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/stationName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="Water Station Name"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/stationAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="Business Address"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/telNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Telephone No. (Optional)"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/businessPermit_image"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:id="@+id/businessPermitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Business Permit"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/sanitaryPermit_image"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:id="@+id/sanitaryPermitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Sanitary Permit"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/physicochemicalPermit_image"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:id="@+id/physicochemicalPermitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add PhysicoChemical Permit"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/birPermit_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_image_black_24dp" />
                <Button
                    android:id="@+id/birPermitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add BIR Permit"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Hours"
                    android:paddingLeft="10dp"
                    android:textSize="18dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/startingHour"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Start Time"
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="2dp"/>
                        <Spinner
                            android:id="@+id/startSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_marginLeft="2dp"
                            android:id="@+id/endingHour"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="End Time"
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"/>
                        <Spinner
                            android:id="@+id/endSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery fee method"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"/>
                <RadioGroup
                    android:id="@+id/deliveryFeeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/perGallon"
                        android:text="Per Gallon"
                        android:layout_width="wrap_content"
                        android:checked="true"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"/>
                    <RadioButton
                        android:id="@+id/fixPrice"
                        android:text="Fix Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/free"
                        android:text="Free Delivery fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <EditText
                    android:id="@+id/deliveryFee"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="Delivery fee"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/min_no_of_gallons"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Minimum no. of gallons"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Information"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_blue_dark"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>