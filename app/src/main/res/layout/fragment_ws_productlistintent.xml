<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="280dp"
        android:background="@drawable/cornerborder4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Selected Product"
            android:textColor="@android:color/white"
            android:textSize="24dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/PLIProdName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Product Name"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="24dp" />
                    <TextView
                        android:id="@+id/PLIprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:text="Price"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/PLItype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:text="Type"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/PLIStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:text="Status"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/PLIDescription"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:gravity="center"
                        android:text="Description"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_marginLeft="20dp"
                            android:id="@+id/PLIupdatebutton"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/z_darkbluebutton"
                            android:text="Update Item"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/PLIbackbutton"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/z_graybuttomv"
                            android:text="Back"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/PLIDeletebutton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/z_redbutton"
                        android:text="Delete Item"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>