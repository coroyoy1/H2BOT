<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Update Station Requirments"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/stationNameDU"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="Water Station Name"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/stationAddressDU"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="Business Address"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/telNoDU"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Telephone No. (Optional)"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/businessPermit_imageDU"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_image_black_24dp" />

                <Button
                    android:id="@+id/businessPermitBtnDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Add Business Permit"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/sanitaryPermit_imageDU"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_image_black_24dp" />

                <Button
                    android:id="@+id/sanitaryPermitBtnDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Add Sanitary Permit"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/physicochemicalPermit_imageDU"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_image_black_24dp" />

                <Button
                    android:id="@+id/physicochemicalPermitBtnDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Add PhysicoChemical Permit"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/birPermit_imageDU"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_image_black_24dp" />

                <Button
                    android:id="@+id/birPermitBtnDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Add BIR Permit"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Business Hours"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/startingHourDU"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:hint="Start Time"
                            android:inputType="time"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <Spinner
                            android:id="@+id/startSpinnerDU"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/endingHourDU"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="End Time"
                            android:inputType="time"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <Spinner
                            android:id="@+id/endSpinnerDU"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Business Days"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/monBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon" />

                    <CheckBox
                        android:id="@+id/tueBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tue" />

                    <CheckBox
                        android:id="@+id/wedBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Wed" />

                    <CheckBox
                        android:id="@+id/thursBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Thurs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/friBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri" />

                    <CheckBox
                        android:id="@+id/satBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sat" />

                    <CheckBox
                        android:id="@+id/sunBoxDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sun" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Delivery fee method"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/deliveryFeeGroupDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/perGallonDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:checked="true"
                        android:text="Per Gallon" />

                    <RadioButton
                        android:id="@+id/fixPriceDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix Price" />

                    <RadioButton
                        android:id="@+id/freeDU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Delivery fee" />
                </RadioGroup>

                <EditText
                    android:id="@+id/deliveryFeeDU"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="Delivery fee"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/min_no_of_gallonsDU"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="Minimum no. of gallons"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you sell gallons?"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="18dp"/>
            <RadioGroup
                android:id="@+id/doYouHaveGallonGroupDU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/yesDU"
                    android:layout_marginLeft="10dp"
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"/>
                <RadioButton
                    android:id="@+id/noDU"
                    android:layout_marginLeft="10dp"
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <EditText
                android:id="@+id/priceOfGallonDU"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:hint="Price of Gallon"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/noOfGallonsDU"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:hint="Cuurent No. of Gallons"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <Button
                    android:layout_weight="1"
                    android:id="@+id/submitButtonDU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Information"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/holo_blue_dark"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>