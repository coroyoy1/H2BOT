<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/waterStationNameUIS"
            android:inputType="textEmailAddress"
            android:hint="Water Station Name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
           />
        <EditText
            android:id="@+id/waterStationFullAddressUIS"
            android:hint="Business Full Address"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            />
        <EditText
            android:id="@+id/waterStationPhoneUIS"
            android:inputType="textEmailAddress"
            android:hint="Telephone"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Business Hours"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/stationBusinesshoursSD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:hint="Start Time"
                android:inputType="time"
                android:textAlignment="center"
                android:textSize="18dp" />
            <Spinner
                android:layout_weight="1"
                android:id="@+id/startSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="untill"/>
            <EditText
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="2dp"
                android:id="@+id/stationBusinesshoursSDEnd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="End Time"
                android:inputType="time"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:layout_weight="1"
                android:id="@+id/endSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMinGal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/waterStationMinimumGallonUIS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:hint="Number of minimum gallon capacity"
                android:inputType="time"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Delivery:"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearDelFee"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/waterStationPerGallonUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Per Gallon"/>
                <RadioButton
                    android:id="@+id/waterStationFixUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fixed fee"/>
                <RadioButton
                    android:id="@+id/free"
                    android:text="Free Delivery fee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearDelFeeNext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/waterStationDeliveryFeeUIS"
                android:textAlignment="center"
                android:hint="Delivery Fee"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/updateInfoButtonUIWS"
                android:text="Update"
                android:layout_marginBottom="50dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/z_darkbluebutton"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>