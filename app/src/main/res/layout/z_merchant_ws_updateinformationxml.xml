<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/imageViewUIWS"
            android:src="@drawable/ic_image_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="230dp" />
        <Button
            android:inputType="textEmailAddress"
            android:id="@+id/addPhotoUIWS"
            android:text="Add Water Station Photo"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/z_blueroundbutton"/>
        <EditText
            android:id="@+id/waterStationNameUIS"
            android:inputType="textEmailAddress"
            android:hint="Water Station Name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
           />
        <EditText
            android:id="@+id/waterStationFullAddressUIS"
            android:hint="Business Full Address"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            />
        <EditText
            android:id="@+id/waterStationPhoneUIS"
            android:inputType="textEmailAddress"
            android:hint="Telephone"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_border"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Business Hours"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/waterStationStartTimeUIS"
                android:inputType="number"
                android:hint="Start Time"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/edit_text_border"
                />
            <EditText
                android:id="@+id/waterStationEndTimeUIS"
                android:inputType="number"
                android:layout_marginLeft="2dp"
                android:hint="End Time"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Delivery Service"/>
            <RadioGroup
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/waterStationYesUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"/>
                <RadioButton
                    android:id="@+id/waterStationNoUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"/>
                <RadioButton
                    android:id="@+id/waterStationFreeUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearMinGal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/waterStationMinimumGallonUIS"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="Number of minimum gallon capacity"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearDelFee"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Delivery Fee"/>
            <RadioGroup
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/waterStationPerGallonUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Gallon"/>
                <RadioButton
                    android:id="@+id/waterStationFixUIS"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fix"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearDelFeeNext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/waterStationDeliveryFeeUIS"
                android:textAlignment="center"
                android:hint="Delivery Fee"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/updateInfoButtonUIWS"
                android:text="Update"
                android:layout_marginBottom="50dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/z_darkbluebutton"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>