<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Dealer"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/imageWaterStation"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/holo_blue_dark"
                        android:text="Details"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/stationaNameBI"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:text="Name"/>
                    <TextView
                        android:id="@+id/stationAddressBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Address"/>
                    <TextView
                        android:id="@+id/stationHoursBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Hours"/>
                    <TextView
                        android:id="@+id/stationTelNoBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Cellphone No"/>
                    <TextView
                        android:id="@+id/stationFeePerGalBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Fee per gal"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/stationDeliveryBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Station Delivery status"/>
                    <TextView
                        android:id="@+id/stationStatusBI"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Status"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearForUpdate"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/updateButtonWSBI"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:textColor="@android:color/white"
                    android:text="Update" />
                </LinearLayout>
            <LinearLayout
                android:id="@+id/linearForUpdateNext"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/updateInfoWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Update Information"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/updateDocumentWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:layout_marginRight="5dp"
                    android:text="Update Document"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/cancelWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_graybuttomv"
                    android:layout_marginRight="5dp"
                    android:text="Cancel"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>