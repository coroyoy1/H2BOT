<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Dealer"
                    android:background="@android:color/holo_blue_dark"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/cornerborder4">
                <ImageView
                    android:id="@+id/imageWaterStation"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_gravity="center"/>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/holo_blue_dark"
                        android:text="Details"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/stationaNameBI"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:text="Name"/>
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/stationAddressBI"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Address"/>
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Hours"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/stationHoursBI"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Hours"/>
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Days"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/dealerdays"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Business Days"/>
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/stationTelNoBI"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Cellphone No"/>

                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum order of gallons per order"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/stationStatusBI"
                        android:layout_marginLeft="20dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Minimum Order of gallons per order"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearForUpdate"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/updateButtonWSBI"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:textColor="@android:color/white"
                    android:text="Update" />
                </LinearLayout>
            <LinearLayout
                android:id="@+id/linearForUpdateNext"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/updateInfoWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Update Information"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/updateDocumentWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_darkbluebutton"
                    android:layout_marginRight="5dp"
                    android:text="Update Document"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/cancelWSBI"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_graybuttomv"
                    android:layout_marginRight="5dp"
                    android:text="Cancel"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>