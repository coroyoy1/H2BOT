<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Document"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="Business Permit"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageUD1"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_image_black_24dp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD1"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Sanitary Permit"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageUD2"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD2"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Fire Protection"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageUD3"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD3"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Real Property Taxes"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageUD4"
                    android:layout_width="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD4"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Building Occupancy Permit"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageUD5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_image_black_24dp" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD5"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="PhysicoChemical Test"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/imageUD6"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/permitButtonUD6"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_photo_camera_black_24dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/businessPermitNoUD"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="20dp"
                android:hint="Business Permit No.:"
                android:textAlignment="center"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/updateButtonUD"
                android:textColor="@android:color/white"
                android:text="Update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/z_darkbluebutton"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>