<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_top"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:contentPadding="15dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/holo_orange_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/customerNamePEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Full Name"
                android:layout_weight="1"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/transactionNoPEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction No."
                android:layout_weight="1"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/transactionStatusPEN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:text="PENDING" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_arrowright"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>