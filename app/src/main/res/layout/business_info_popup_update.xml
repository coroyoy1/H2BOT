<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/WPFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/WPAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/WPBussinesHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Business Hours" />

    <EditText
        android:id="@+id/WPPlateNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plate Number" />

    <EditText
        android:id="@+id/WPDeliveryFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Delivery Fee"
        android:inputType="textEmailAddress" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#0097e6"
            android:padding="10dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#f5f6fa"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#0097e6"
            android:padding="10dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#f5f6fa"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>