<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waterstation.AddItemMerchant"
    android:background="@mipmap/waterbackgroundvvv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="Add Item"
            android:textColor="@android:color/white"
            android:textSize="24dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ItemImage"
            android:layout_width="193dp"
            android:layout_height="137dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/UploadAPhotoButton"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="86dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/z_darkbluebutton"
            android:text="Upload a Photo"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/ItemNameEditText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Item Name"
            android:background="@drawable/z_edittextround"/>

        <Spinner
            android:textAlignment="center"
            android:id="@+id/waterTypeSpinner"
            android:layout_width="294dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ItemNameEditText"
            android:layout_centerVertical="true"
            android:text="â‚±"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/PriceEditText"
            android:layout_width="249dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_alignEnd="@+id/ItemNameEditText"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName"
            android:background="@drawable/z_edittextround"/>

        <EditText
            android:id="@+id/QualityEditText"
            android:layout_width="298dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:ems="10"
            android:hint="Quantity"
            android:textAlignment="center"
            android:background="@drawable/z_edittextround"
            android:inputType="textPersonName" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/AddItemButton"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Add Item"
            android:textColor="@android:color/white" />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>