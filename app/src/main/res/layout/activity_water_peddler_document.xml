<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dealer.WaterPeddlerDocumentActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Submit Document"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Pending"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="15sp" />




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#32918b88">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/driverLicenseImageView"
                        android:gravity="center"
                        android:text="Driver's License"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/chooseButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignEnd="@+id/driverLicenseImageView"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/holo_blue_dark"
                        android:text="Choose image"
                        android:textColor="@android:color/background_light" />

                    <ImageView
                        android:id="@+id/driverLicenseImageView"
                        android:layout_width="110dp"
                        android:layout_height="97dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="47dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_launcher_background" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:text="Note: Before you proceed, you must submit the necessary requirements and wait for the administrator's approval. Once the submittion is approved, you may proceed." />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:id="@+id/driverLicense"
                        android:layout_below="@+id/textView8"
                        android:hint="Driver's License"
                        android:gravity="center"
                        />
            </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="Station Information"
            android:textColor="#FFF"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/dealerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Water Dealer Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/dealerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Address"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/dealerNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Cellphone Number"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Hours:"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/dealerBusinesshoursStart"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Start Time"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_marginRight="2dp"/>
            <Spinner
                android:id="@+id/startSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="untill"/>
            <EditText
                android:layout_marginLeft="2dp"
                android:id="@+id/dealerBusinesshoursEnd"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="End Time"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18dp"
                />
            <Spinner
                android:id="@+id/endSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <RadioGroup
            android:gravity="center"
            android:id="@+id/dealerRadioAlld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Service: "
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/radioYes"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"/>
            <RadioButton
                android:id="@+id/radioNo"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"
                android:id="@+id/radioFree"/>
        </RadioGroup>
        <EditText
            android:id="@+id/dealerCapacity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Delivery no. minimum gallons capacity"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>
        <RadioGroup
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Fee"
                android:textSize="18dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioPerGalOrFix">
                <RadioButton
                    android:id="@+id/radioPerGalSD"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Per Gallon"/>
                <RadioButton
                    android:id="@+id/radioFixSD"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fix"/>
            </RadioGroup>
        </RadioGroup>
        <EditText
            android:id="@+id/dealerDeliveryFee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="Delivery fee"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="18dp" />
            <Button
                android:id="@+id/SubmitButtonWaterPeddlerHomeActivity"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Submit"
                android:textColor="@android:color/background_light" />
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


    </LinearLayout>
    </ScrollView>

</RelativeLayout>