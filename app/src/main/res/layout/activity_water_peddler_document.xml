<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterStationDocumentVersion2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Dealer Requirments"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/driversLicense_image"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:id="@+id/driversLicenseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Driver's Licernse"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:id="@+id/NBIImageView"
                    android:src="@drawable/ic_image_black_24dp"/>
                <Button
                    android:id="@+id/NBIButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add NBI Clearance"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Business Hours"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <EditText
                            android:clickable="true"
                            android:id="@+id/startingHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:hint="Start Time"
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textSize="18dp" />
                        <Spinner
                            android:id="@+id/startSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"></Spinner>
                         </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <EditText
                            android:clickable="true"
                            android:id="@+id/endHour2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:hint="End Time"
                            android:inputType="none"
                            android:textAlignment="center"
                            android:textSize="18dp" />

                        <Spinner
                            android:id="@+id/endSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"></Spinner>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Business Days"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/monBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon" />

                    <CheckBox
                        android:id="@+id/tueBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Tue" />

                    <CheckBox
                        android:id="@+id/wedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Wed" />

                    <CheckBox
                        android:id="@+id/thursBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Thurs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/friBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri" />

                    <CheckBox
                        android:id="@+id/satBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sat" />

                    <CheckBox
                        android:id="@+id/sunBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Sun" />
                </LinearLayout>
